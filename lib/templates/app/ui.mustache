<!DOCTYPE HTML>
<html>
  <head>
    <title>VUU.SE UI Prototype</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap -->
    <link href="./css/vendor/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="./css/vendor/bootstrap-theme.min.css" rel="stylesheet" media="screen">

    <style>
      .tab-content {
        width: 100%;
        height: 600px;
        border-bottom: 1px solid #ddd;
        background: #f9f9f9;
      }
    </style>
  </head>
  <body>
    <div id="app">
      <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
        <div class="container">
            <button type="button" class="btn btn-default navbar-btn add-region" title="Create Region" disabled><i class="glyphicon glyphicon-plus"></i> New region</button>
            <button type="button" class="btn btn-default navbar-btn add-pocket" title="Create Card" disabled><i class="glyphicon glyphicon-plus"></i> New card</button>
            <button type="button" class="btn btn-default navbar-btn view-walls" title="View walls" data-toggle="modal" data-target="#wallModal">View walls</button>
            <a href="/logout" class="btn btn-default navbar-btn auth-logout" title="Logout of VUU.SE">Logout</a>
            <p class="navbar-text navbar-right">Signed in as <strong>{{user.displayName}}</strong></p>
        </div>
      </nav>

        <div class="modal fade" id="wallModal" tabindex="-1" role="dialog" aria-labelledby="wallModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="wallModalLabel">VUU.SE wall list</h4>
                    </div>
                    <div class="modal-body">
                        <p>Choose a wall to view:</p>

                        <div class="list-group" id="wallList">
                        </div>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </div>

    <script src="https://cdn.auth0.com/w2/auth0-widget-3.0.8.min.js"></script>
    <script data-main="scripts/vuu.se.app" src="scripts/vendor/require.js"></script>
  </body>
</html>
