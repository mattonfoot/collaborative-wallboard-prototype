{
    "env": {
        "node":                     true
    },

    "parserOptions": {
        "ecmaVersion": 6
    },

    "rules": {
        "block-scoped-var":           2,
        "brace-style":              [ 2, "1tbs" ],
        "camelcase":                  1,
        "curly":                      2,
        "eol-last":                   2,
        "eqeqeq":                   [ 2, "smart" ],
        "max-depth":                [ 1, 3 ],
        "max-statements":           [ 1, 15 ],
        "max-len":                  [ 1, 160 ],
        "new-cap":                    1,
        "no-extend-native":           2,
        "no-mixed-spaces-and-tabs":   2,
        "no-trailing-spaces":         2,
        "no-use-before-define":     [ 2, "nofunc" ],
        "no-unused-vars":             1,
        "quotes":                   [ 2, "single", "avoid-escape" ],
        "semi":                     [ 2, "always" ],
        "keyword-spacing":          [ 2, { "before": true }],
        "computed-property-spacing": [ 2, "always" ],
        "array-bracket-spacing":    [ 2, "always" ],
        "object-curly-spacing":     [ 2, "always" ],
        "block-spacing":              2,
        "space-unary-ops":            2
    }
}
